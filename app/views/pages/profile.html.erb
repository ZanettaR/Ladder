<!DOCTYPE html>
<script type="text/javascript">
    $(window).on('load',function(){
      const isLoggedIn = true;
      if (isLoggedIn) {
        $('#myModal').modal('show');
      }
    });
</script>

<html>
  <head>
  
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'a_signin_modal', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'profile', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div>
    <div class="modal fade"  role="dialog" id="myModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div align="center" class="modal-bosy">
            <div class="modal-header">
              <h4 class="modal-title">Sign Up</h4>
              <p class="info">Hold up! You have to create a profile before you can view this profile.</p>
              <form class="form-horizontal">
                <div>
                    <input type="name" class="inputfield form-control" id="pwd" placeholder="Your name">
                </div>
                <div>
                  <input type="email" class="inputfield form-control" id="email" placeholder="Enter email">
                </div>
                <div>
                    <input type="password" class="inputfield form-control" id="pwd" placeholder="Enter password">
                </div>           
                <div>
                  <button type="submit" class="submit btn btn-default">Submit</button>
                </div>
                <div align="center" class="checkbox">
                  <label class="info"><input type="checkbox"> Remember me</label>
                </div>

              </form>
            </div>
            
            <div class="modal-footer">
              <p align="center" class="small-info">By signing up you agree to our terms and conditions.</p> 
            </div>
          </div>  
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
  </div>

  <body>
    <h2>Zanetta Tyler</h2>
    <div class="container clearfix">
   <div class="avatar">
     <input id="fileUpload" type="file" />
      <svg version="1.1" id="camera" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
         viewBox="0 0 25 15" enable-background="new 0 0 25 15" xml:space="preserve">
      <path id="cameraFrame" fill="none" stroke="white" stroke-miterlimit="10" d="M23.1,14.1H1.9c-0.6,0-1-0.4-1-1V1.9c0-0.6,0.4-1,1-1h21.2
         c0.6,0,1,0.4,1,1v11.3C24.1,13.7,23.7,14.1,23.1,14.1z"/>
      <path id="circle" fill="none" stroke="#ffffff" stroke-width="1.4" stroke-miterlimit="12" d="M17.7,7.5c0-2.8-2.3-5.2-5.2-5.2S7.3,4.7,7.3,7.5s2.3,5.2,5.2,5.2
         S17.7,10.3,17.7,7.5z"/>
      <g id="plus">
         <path fill="none" id="plusLine" class="line" stroke="#ffffff" stroke-linecap="round" stroke-miterlimit="10" d="M20.9,2.3v4.4"/>
         <path fill="none" class="line"stroke="#ffffff" stroke-linecap="round" stroke-miterlimit="10" d="M18.7,4.6h4.4"/>
      </g>
     </svg>
     <div id="openModal">
       <span>Drop here or</span>
     </div>
      </div
    <%= yield %>
  </body>

</html>
