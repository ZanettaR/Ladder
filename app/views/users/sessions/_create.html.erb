<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="form-group">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, required: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :password %><br />
    <%= form.password_field :password, autocomplete: 'off', required: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= form.submit t('.submit'), class: 'btn btn-block btn-primary' %>
  </div>
<% end %>
